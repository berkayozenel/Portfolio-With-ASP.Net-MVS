@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Yeni Mesaj Gönderme Sayfası </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Alıcı Mail</label>
                    @Html.TextBoxFor(x=>x.Receiver, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj İçeriği</label>
                    @Html.TextAreaFor(x=>x.MessageContent,8,3, new {@class = "form-control"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
            </form>
        </div>
    </div>
</div>

