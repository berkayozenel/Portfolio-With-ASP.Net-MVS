@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Admin Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Mail Adresi</th>
                            <th>Konu</th>
                            <th>Mesaj İçeriği</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesaj Detay Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.ReceiverName</td>
                                <td>@item.Receiver</td>
                                <td>@item.Subject</td>
                                <td>Detay Gör kısmından bakınız.</td>
                                <td>@item.Date</td>
                                <td><a href="/AdminMessage/AdminMessageDeleteSender/@item.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-success">Mesaj Detay Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

